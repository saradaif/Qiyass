<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_chat_setting" tools:context="shs111.qiyas.ChatSetting"
    android:background="#4999a0">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="إختر المجموعة التي ترغب بفتح الدردشة الخاصة بها:"
            android:id="@+id/textView12"
            android:layout_gravity="right"
            android:textColor="#ffffff" />
        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="إختبار القدرات العامة."
            android:id="@+id/radioButton"
            android:layout_gravity="right"
            android:layout_marginTop="20dp"
            android:textColor="#ffffff" />
        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="إختبار القدرات العامة باللغة الإنجليزية."
            android:id="@+id/radioButton2"
            android:layout_gravity="right"
            android:textColor="#ffffff" />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="إختبار التحصيل الدراسي للتخصصات العلمية."
            android:id="@+id/radioButton3"
            android:layout_gravity="right"
            android:textColor="#ffffff" />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="إإختبار التحصيل الدراسي للتخصصات النظرية."
            android:id="@+id/radioButton4"
            android:layout_gravity="right"
            android:textColor="#ffffff" />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="إختبار القدرات للجامعيين."
            android:id="@+id/radioButton5"
            android:layout_gravity="right"
            android:textColor="#ffffff" />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="إختبار المعلمين والمعلمات."
            android:id="@+id/radioButton6"
            android:layout_gravity="right"
            android:textColor="#ffffff" />


        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal">

        </LinearLayout>

        <Button
            android:layout_width="125dp"
            android:layout_height="wrap_content"
            android:text="موافق"
            android:id="@+id/okButton"
            android:layout_marginTop="40dp"
            android:textColor="#4a9aa1"
            android:layout_gravity="center_horizontal" />


        <TextView
            android:layout_width="364dp"
            android:layout_height="wrap_content"
            android:text="تنبيه! إذا رغبت في تغيير إختيار المجموعات يجب عليك العودة
 «لإعدادت إختيار المجموعات»"
            android:id="@+id/textView13"
            android:layout_marginTop="90dp" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="إعدادت إختيار المجموعات"
            android:id="@+id/settingButton"
            android:textColor="#4a9aa1" />

    </LinearLayout>
</RelativeLayout>
